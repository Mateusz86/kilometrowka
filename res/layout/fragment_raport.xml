<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/raport_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="sss"
            android:textStyle="bold" />

    <Button 
        android:id="@+id/generuj_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="pobierz raport"
        
        />
    
	<Button 
	    android:id="@+id/pokaz_pdf"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="pokaz pdf"
	    android:visibility="invisible"
	    />
    
	
	    <Button 
        android:id="@+id/generuj_pdf_w_pamieci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="generuj pdf w pamieci"
        android:visibility="invisible"
        />
    
	<Button 
	    android:id="@+id/pokaz_pdf_z_pamieci"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="pokaz pdf z pamieci"
	    android:visibility="invisible"
	    />
	
    
</LinearLayout>
