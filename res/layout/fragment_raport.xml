<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/datePicker1"
            style="@style/_AppTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />

        <DatePicker
            android:id="@+id/datePicker2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />
        
    </LinearLayout>
    
    
    <Button 
        android:id="@+id/generuj_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="pobierz raport"
        
        />
    
	<Button 
	    android:id="@+id/pokaz_pdf"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="pokaz pdf"
	    android:visibility="invisible"
	    />
    
	
	    <Button 
        android:id="@+id/generuj_pdf_w_pamieci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="generuj pdf w pamieci"
        android:visibility="invisible"
        />
    
	<Button 
	    android:id="@+id/pokaz_pdf_z_pamieci"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="pokaz pdf z pamieci"
	    android:visibility="invisible"
	    />
	
    
</LinearLayout>
