<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <Button 
        android:id="@+id/generuj_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="generuj pdf na sdcard"
        
        />
    
	<Button 
	    android:id="@+id/pokaz_pdf"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="pokaz pdf"
	    />
    
	
	    <Button 
        android:id="@+id/generuj_pdf_w_pamieci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="generuj pdf w pamieci"
        
        />
    
	<Button 
	    android:id="@+id/pokaz_pdf_z_pamieci"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="pokaz pdf z pamieci"
	    />
	
    
</LinearLayout>
